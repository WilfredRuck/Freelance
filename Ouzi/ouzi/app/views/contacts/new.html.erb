<div class="contact-container">

<h1 id="page-title"> Contact Us! </h1>

<div class="skinny-wrapper wrapper-padding">
	<%= form_for @contact do |f| %>
		<%= f.label :name %> <br>
		<%= f.text_field :name, :class=>"input", required: true %>

		<br>

		<%= f.label :email %> <br>
		<%= f.email_field :email, :class=>"input", required: true %>

		<br>

		<%= f.label :message %> <br>
		<%= f.text_area :message, as: :text, :class=>"textarea", required: true %>
		
		<br>

		<div class="hidden">
			<%= f.label :nickname %> <br>
			<%= f.text_field :nickname, hint: 'leave this field blank' %>
		</div>

		<%= f.submit 'Send Message', :class=>"button" %>
	<%end%>
</div>

