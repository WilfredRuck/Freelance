<script>
		      function initMap() {
		      	<%if !@firstLocation.nil?%>
		      	var first = {lat: <%= @firstLocation.lat %>, lng: <%= @firstLocation.lng %>};
		      	<%end%>
		      	<%if !@secondLocation.nil?%>
		      	var second = {lat: <%= @secondLocation.lat %>, lng: <%= @secondLocation.lng %>};
		      	<%end%>
		      	<%if !@secondLocation.nil?%>
		      	var third = {lat: <%= @thirdLocation.lat %>, lng: <%= @thirdLocation.lng %>};
		      	<%end%>
		      	<%if !@secondLocation.nil?%>
		      	var fourth = {lat: <%= @fourthLocation.lat %>, lng: <%= @fourthLocation.lng %>};
		      	<%end%>
		      	<%if !@secondLocation.nil?%>
		      	var fifth = {lat: <%= @fifthLocation.lat %>, lng: <%= @fifthLocation.lng %>};
		       	<%end%>
		       	var map = new google.maps.Map(document.getElementById('map'), {
		       		zoom: 9,
		       		center: first
		       	});
		       				<%if !@firstLocation.nil?%>
				        	var marker = new google.maps.Marker({
 								position: first,
 								animation: google.maps.Animation.DROP,
 								map: map,
				        	});
				        	<%end%>
				        	<%if !@secondLocation.nil?%>
				        	var marker = new google.maps.Marker({
 								position: second,
 								animation: google.maps.Animation.DROP,
 								map: map,
				        	});
				        	<%end%>
				        	<%if !@thirdLocation.nil?%>
				        	var marker = new google.maps.Marker({
 								position: third,
 								animation: google.maps.Animation.DROP,
 								map: map,
				        	});
				        	<%end%>
				        	<%if !@fourthLocation.nil?%>
				        	var marker = new google.maps.Marker({
 								position: fourth,
 								animation: google.maps.Animation.DROP,
 								map: map,
				        	});
				        	<%end%>
				        	<%if !@fifthLocation.nil?%>
				        	var marker = new google.maps.Marker({
 								position: fifth,
 								animation: google.maps.Animation.DROP,
 								map: map,
				        	});
				        	<%end%>
		      }
    		</script>
    		<script async defer
    	src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBHkiWbFvAgbpAry3pAyir2MdKmW-dvywQ
		&callback=initMap">
    </script>
